    <div class="container">
        <form method="POST" action="/verify-otp" id="update_user">
            <div class="new_user">
                <div class="form-group" hidden>
                    <label for="name" class="text-dark">name</label>
                    <input type="text" name="name" value="<%= name%>" placeholder="">
                </div>
                <div class="form-group" hidden>
                    <label for="random_otp" class="text-dark">random otp</label>
