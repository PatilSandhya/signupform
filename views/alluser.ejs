<!DOCTYPE html>
<%-include('include/header.ejs')%> 
<div id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient">New user <i class="far fa-user"></i></span>
            </a>
        </div>
        <form action="/" method="POST">
            <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<users.length; i++) {%> 
                    <tr>
                    <td><%= i + 1 %> </td>
                    <td><%= users[i].fname%></td>
                    <td><%= users[i].lname%></td>
                    <td><%= users[i].email%></td>
                    <td><%= users[i].contact%></td>
                    <td><%= users[i].description%></td>
                </tr>
                <% } %> 

                    </tbody>
                </tbody>
            </table>
        </form>
        
            

    </div>
</div>



<%-include('include/footer.ejs') %> 

